<!DOCTYPE html>
<html>
    <head>
        <%- include('header.ejs') %>
    </head>
<body>
    <%- include('navbar.ejs') %>

    
        <div class="row">
            <!-- Menu Lateral -->
            
            <div class="col-lg-3">
                <%- include('menu.ejs') %>
            </div>
            

            <!-- FormulÃ¡rio de Registro -->
